css",{"type":48,"value":216},", a framework I've been using professionally and in personal projects for awhile now.",{"type":42,"tag":51,"props":218,"children":219},{},[220],{"type":48,"value":221},"According to the responses within the issue, there are two ways of bringing in TailwindCSS:",{"type":42,"tag":51,"props":223,"children":224},{},[225],{"type":42,"tag":226,"props":227,"children":228},"strong",{},[229],{"type":48,"value":230},"1. Import TailwindCSS through their CDN:",{"type":42,"tag":51,"props":232,"children":233},{},[234,236,242],{"type":48,"value":235},"Edit your config file at ",{"type":42,"tag":57,"props":237,"children":239},{"className":238},[],[240],{"type":48,"value":241},".vitepress/config.js",{"type":48,"value":243}," and add the following.",{"type":42,"tag":77,"props":245,"children":250},{"className":246,"code":248,"language":249,"meta":6},[247],"language-js","module.exports = {\n    head: [\n        ['link', { rel: 'stylesheet', href: 'https://unpkg.com/tailwindcss@2.0.4/dist/tailwind.min.css' }]\n    ]\n};\n","js",[251],{"type":42,"tag":57,"props":252,"children":253},{"__ignoreMap":6},[254],{"type":48,"value":248},{"type":42,"tag":51,"props":256,"children":257},{},[258,260,267],{"type":48,"value":259},"This is quick and easy, but you miss out on some of the key TailwindCSS features as stated on ",{"type":42,"tag":66,"props":261,"children":264},{"href":262,"rel":263},"https://tailwindcss.com/docs/installation#using-tailwind-via-cdn",[70],[265],{"type":48,"value":266},"their site",{"type":48,"value":268},":",{"type":42,"tag":270,"props":271,"children":272},"blockquote",{},[273],{"type":42,"tag":51,"props":274,"children":275},{},[276],{"type":48,"value":277},"Before using the CDN build, please note that many of the features that make Tailwind CSS great are not available without incorporating Tailwind into your build process.",{"type":42,"tag":95,"props":279,"children":282},{"className":280},[281],"list-disc",[283,284,289,290,295,296,301,302,307,308],{"type":48,"value":176},{"type":42,"tag":99,"props":285,"children":286},{},[287],{"type":48,"value":288},"You can't customize Tailwind's default theme",{"type":48,"value":176},{"type":42,"tag":99,"props":291,"children":292},{},[293],{"type":48,"value":294},"You can't use any directives like @apply, @variants, etc",{"type":48,"value":176},{"type":42,"tag":99,"props":297,"children":298},{},[299],{"type":48,"value":300},"You can't enable additional variants like group-focus",{"type":48,"value":176},{"type":42,"tag":99,"props":303,"children":304},{},[305],{"type":48,"value":306},"You can't install third-party plugins",{"type":48,"value":176},{"type":42,"tag":99,"props":309,"children":310},{},[311],{"type":48,"value":312},"You can't tree-shake unused styles",{"type":42,"tag":51,"props":314,"children":315},{},[316],{"type":42,"tag":226,"props":317,"children":318},{},[319],{"type":48,"value":320},"2. Download using npm/yarn:",{"type":42,"tag":51,"props":322,"children":323},{},[324,326,333],{"type":48,"value":325},"Github user ky-is posted an answer linking to ",{"type":42,"tag":66,"props":327,"children":330},{"href":328,"rel":329},"https://github.com/ky-is/vitepress-starter-tailwind",[70],[331],{"type":48,"value":332},"this repo",{"type":48,"value":334}," that is a blank Vitepress project with TailwindCSS working.",{"type":42,"tag":51,"props":336,"children":337},{},[338],{"type":48,"value":339},"The first step is to update your package.json's so that it at least has:",{"type":42,"tag":77,"props":341,"children":344},{"className":342,"code":343,"language":249,"meta":6},[247],"{\n    ...,\n    \"devDependencies\": {\n      \"@tailwindcss/postcss7-compat\": \"^2.0.4\",\n      \"autoprefixer\": \"^9\",\n      \"postcss\": \"^7\",\n      \"vitepress\": \"^0.12.2\"\n  },\n  \"postcss\": {\n    \"plugins\": {\n      \"tailwindcss\": {},\n      \"autoprefixer\": {}\n    }\n  }\n}\n",[345],{"type":42,"tag":57,"props":346,"children":347},{"__ignoreMap":6},[348],{"type":48,"value":343},{"type":42,"tag":51,"props":350,"children":351},{},[352,354,360,362,368],{"type":48,"value":353},"Make sure to run ",{"type":42,"tag":57,"props":355,"children":357},{"className":356},[],[358],{"type":48,"value":359},"yarn install",{"type":48,"value":361}," or ",{"type":42,"tag":57,"props":363,"children":365},{"className":364},[],[366],{"type":48,"value":367},"npm install",{"type":48,"value":369}," after updating your package.json file to update your dependencies.",{"type":42,"tag":51,"props":371,"children":372},{},[373],{"type":48,"value":374},"Please note the comment by user neilmispelaar within the issue thread posted above:",{"type":42,"tag":270,"props":376,"children":377},{},[378],{"type":42,"tag":51,"props":379,"children":380},{},[381],{"type":48,"value":382},"At time of writing, somewhere in the project dependencies postCSS version 7 is being referenced, but TailwindCSS uses PostCSS version 8. This is why in your package.json you have to reference a version of TailwindCSS that is compatible with PostCSS version 7. Fun Bonus: If you use this compatible version of TailwindCSS then you can not use AutoPrefixer past version 9.",{"type":42,"tag":51,"props":384,"children":385},{},[386,388,394],{"type":48,"value":387},"It may also be worth going over ",{"type":42,"tag":66,"props":389,"children":392},{"href":390,"rel":391},"https://tailwindcss.com/docs/installation#post-css-7-compatibility-build",[70],[393],{"type":48,"value":390},{"type":48,"value":395}," if you run into issues.",{"type":42,"tag":51,"props":397,"children":398},{},[399,401,407,409,415],{"type":48,"value":400},"The next key step is adding the ",{"type":42,"tag":57,"props":402,"children":404},{"className":403},[],[405],{"type":48,"value":406},"theme",{"type":48,"value":408}," folder within your ",{"type":42,"tag":57,"props":410,"children":412},{"className":411},[],[413],{"type":48,"value":414},".vitepress",{"type":48,"value":416}," directory.",{"type":42,"tag":51,"props":418,"children":419},{},[42