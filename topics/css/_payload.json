":467},{"className":465},[466],"text-gray-500",[468],{"type":24,"value":469},"I decided the default Vue green #3eaf7c is a bit too Vuey.",{"type":18,"tag":126,"props":471,"children":476},{"className":472,"code":474,"language":475,"meta":6},[473],"language-sass","/* default $accentColor */\n$accentColor = #3eaf7c\n","sass",[477],{"type":18,"tag":59,"props":478,"children":479},{"__ignoreMap":6},[480],{"type":24,"value":474},{"type":18,"tag":27,"props":482,"children":484},{"className":483},[466],[485],{"type":24,"value":486},"So I swapped it with a nice purple/blue color to personalize the site a bit.",{"type":18,"tag":126,"props":488,"children":491},{"className":489,"code":490,"language":475,"meta":6},[473],"/* .vuepress/styles/palette.styl */\n$accentColor = #4979ff\n",[492],{"type":18,"tag":59,"props":493,"children":494},{"__ignoreMap":6},[495],{"type":24,"value":490},{"type":18,"tag":19,"props":497,"children":499},{"id":498},"individual-css-elements",[500],{"type":24,"value":501},"Individual CSS Elements",{"type":18,"tag":326,"props":503,"children":504},{},[505,516],{"type":18,"tag":209,"props":506,"children":507},{},[508,509,515],{"type":24,"value":422},{"type":18,"tag":59,"props":510,"children":512},{"className":511},[],[513],{"type":24,"value":514},".vuepress/styles/index.styl",{"type":24,"value":430},{"type":18,"tag":209,"props":517,"children":518},{},[519,521,528],{"type":24,"value":520},"Write CSS or ",{"type":18,"tag":213,"props":522,"children":525},{"href":523,"rel":524},"https://stylus-lang.com/",[217],[526],{"type":24,"value":527},"Stylus",{"type":24,"value":529}," to enhance your VuePress styles.",{"type":18,"tag":27,"props":531,"children":532},{},[533,539],{"type":18,"tag":213,"props":534,"children":537},{"href":535,"rel":536},"https://vuepress.vuejs.org/config/#index-styl",[217],[538],{"type":24,"value":453},{"type":24,"value":455},{"type":18,"tag":457,"props":541,"children":543},{"id":542},"example-1",[544],{"type":24,"value":462},{"type":18,"tag":27,"props":546,"children":548},{"className":547},[466],[549],{"type":24,"value":550},"I find the default spacing that VuePress provides to be too close together.",{"type":18,"tag":126,"props":552,"children":556},{"className":553,"code":555,"language":12,"meta":6},[554],"language-css","/* default css */\nblockquote,\ndl,\ndd,\nh1,\nh2,\nh3,\nh4,\nh5,\nh6,\nhr,\nfigure,\np,\npre {\n  margin: 0;\n}\n",[557],{"type":18,"tag":59,"props":558,"children":559},{"__ignoreMap":6},[560],{"type":24,"value":555},{"type":18,"tag":27,"props":562,"children":564},{"className":563},[466],[565],{"type":24,"value":566},"So I took some inspiration from the default VitePress theme and edited my .vuepress.styles.index.styl file with",{"type":18,"tag":126,"props":568,"children":571},{"className":569,"code":570,"language":12,"meta":6},[554],"/* .vuepress.styles.index.styl */\nblockquote,\nol,\np,\nul {\n  margin: 1rem 0;\n  line-height: 1.7;\n}\n",[572],{"type":18,"tag":59,"props":573,"children":574},{"__ignoreMap":6},[575],{"type":24,"value":570},{"title":6,"searchDepth":232,"depth":232,"links":577},[578,582],{"id":411,"depth":232,"text":414,"children":579},[580],{"id":459,"depth":581,"text":462},3,{"id":498,"depth":232,"text":501,"children":583},[584],{"id":542,"depth":581,"text":462},"content:vuepress-styles.md","vuepress-styles.md","vuepress-styles",1732248155399]