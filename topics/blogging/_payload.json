arer \u003CREPLACE WITH TOKEN GENERATED ABOVE>',\n  },\n  body: JSON.stringify({\n    title: 'Liverpool FC',\n    contentFormat: 'markdown',\n    content: '# You can put Markdown here.\\n***\\nSee what it looks like?',\n    canonicalUrl: 'http://jamietalbot.com/posts/liverpool-fc',\n    tags: ['football', 'sport', 'Liverpool'],\n    publishStatus: 'public',\n  }),\n})\n  .then(res => res.json())\n  .then(res => console.log(JSON.stringify(res)))\n",[420],{"type":40,"tag":64,"props":421,"children":422},{"__ignoreMap":6},[423],{"type":55,"value":418},{"type":40,"tag":58,"props":425,"children":426},{},[427,429],{"type":55,"value":428},"If this returned a 201 status code, you should now be able to see your post on ",{"type":40,"tag":73,"props":430,"children":433},{"href":431,"rel":432},"https://medium.com",[77],[434],{"type":55,"value":435},"Medium.com",{"type":40,"tag":246,"props":437,"children":439},{"id":438},"available-endpoints",[440],{"type":55,"value":441},"Available Endpoints:",{"type":40,"tag":58,"props":443,"children":444},{},[445],{"type":55,"value":446},"Here's a list of the available endpoints:",{"type":40,"tag":58,"props":448,"children":449},{},[450],{"type":40,"tag":220,"props":451,"children":452},{},[453],{"type":55,"value":454},"Getting the authenticated userâ€™s details:",{"type":40,"tag":58,"props":456,"children":457},{},[458],{"type":40,"tag":64,"props":459,"children":461},{"className":460},[],[462],{"type":55,"value":332},{"type":40,"tag":58,"props":464,"children":465},{},[466],{"type":40,"tag":220,"props":467,"children":468},{},[469],{"type":55,"value":470},"Listing the userâ€™s publications:",{"type":40,"tag":58,"props":472,"children":473},{},[474],{"type":40,"tag":64,"props":475,"children":477},{"className":476},[],[478],{"type":55,"value":479},"GET https://api.medium.com/v1/users/\u003CuserId>/publications",{"type":40,"tag":58,"props":481,"children":482},{},[483],{"type":40,"tag":220,"props":484,"children":485},{},[486],{"type":55,"value":487},"F